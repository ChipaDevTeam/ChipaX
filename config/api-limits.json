{
  "publicApi": {
    "defaultRateLimit": {
      "windowMs": 60000,
      "maxRequests": 100
    },
    "endpoints": {
      "/api/v1/orders": {
        "windowMs": 10000,
        "maxRequests": 10
      },
      "/api/v1/market/orderbook": {
        "windowMs": 1000,
        "maxRequests": 20
      },
      "/api/v1/market/trades": {
        "windowMs": 1000,
        "maxRequests": 20
      },
      "/api/v1/balances": {
        "windowMs": 5000,
        "maxRequests": 10
      }
    }
  },
  "websocket": {
    "maxConnectionsPerIp": 5,
    "maxSubscriptionsPerConnection": 50,
    "pingIntervalMs": 30000,
    "pongTimeoutMs": 10000
  },
  "authentication": {
    "jwtExpiresIn": "24h",
    "apiKeyExpiresIn": "never",
    "refreshTokenExpiresIn": "30d",
    "maxApiKeysPerUser": 10
  }
}
